<style>
  .navSearchBtn {
    background: rgb(255, 231, 242);
    background: radial-gradient(
      circle,
      rgba(255, 231, 242, 1) 0%,
      rgba(242, 248, 255, 1) 100%
    );
    font-weight: 600 !important;
    color: #f3424d !important;
    border-radius: 25px !important;
  }
  .navSearchBtn:hover {
    background: rgb(255, 231, 242);
    background: radial-gradient(
      circle,
      rgba(255, 231, 242, 1) 0%,
      rgba(242, 248, 255, 1) 100%
    );
    font-weight: 600 !important;
    color: #f3424d !important;
    transform: scale(1.03);
    transition: 0.5s !important;
  }
  .navSearchBtn i {
    display: inline;
    margin-right: 0.5rem;
  }
  .search-inp {
    border-radius: 25px !important;
    padding: 0.5rem 3rem 0.5rem 3rem !important;
    -webkit-box-shadow: 0px 10px 10px -10px rgba(0, 0, 0, 0.7);
    -moz-box-shadow: 0px 10px 10px -10px rgba(0, 0, 0, 0.7);
    box-shadow: 0px 10px 10px -10px rgba(0, 0, 0, 0.7);
  }
  .search-inp::placeholder {
    font-weight: 600 !important;
    color: rgb(110, 110, 110);
    font-size: 15px;
  }

  @media (max-width: 1020px) {
    .searchOpt {
      display: none !important;
    }
  }
</style>

<nav class="navbar navbar-expand-md bg-body-light border-bottom sticky-top">
  <div class="container-fluid">
    <a class="navbar-brand" href="/"><i class="fa-regular fa-compass"></i></a>
    <button
      class="navbar-toggler"
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#navbarNavAltMarkup"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-link leftNav" href="/listings"
          ><i class="fa-solid fa-bars"></i>Explore</a
        >
      </div>
      <div class="navbar-nav ms-auto searchOpt">
        <form class="d-flex" role="search">
          <input
            class="form-control me-2 search-inp"
            type="search"
            placeholder="Search Destination"
            aria-label="Search"
          />
          <button class="btn navSearchBtn" type="submit">
            <i class="fa-solid fa-magnifying-glass"></i>Search
          </button>
        </form>
      </div>
      <div class="navbar-nav ms-auto">
        <a class="nav-link rightNav" href="/listings/new"
          ><i class="fa-solid fa-square-plus"></i>Airbnb your home</a
        >
        <% if(!currUser){ %>
        <a class="nav-link rightNav" href="/signup"
          ><i class="fa-solid fa-user-plus"></i><b>Sign Up</b></a
        >
        <a class="rightNav nav-link" href="/login"
          ><i class="fa-solid fa-share-from-square"></i><b>Login</b></a
        >
        <% } %> <% if(currUser){ %>
        <a class="rightNav nav-link" href="/logout"
          ><i class="fa-solid fa-right-to-bracket"></i><b>Logout</b></a
        >
        <% } %>
      </div>
    </div>
  </div>
</nav>
